@{
  Layout = "_Layout";
}

@model UniversityReg.Models.Course

<h1>Edit this course</h1>

@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.Name)
    @Html.EditorFor(model => model.Name)

    @Html.LabelFor(model => model.Number)
    @Html.EditorFor(model => model.Number)

    <input type="submit" value="Update course" class="btn btn-default" />
}

<input type="button" value="Course List" onclick="location.href='@Url.Action("Index", "Courses")';" class="btn btn-primary" />
<input type="button" value="Return Home" onclick="location.href='@Url.Action("Index", "Home")';" class="btn btn-primary" />